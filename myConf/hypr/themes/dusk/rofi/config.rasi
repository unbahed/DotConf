

* {
  /* Default background color */
  background-color: #222831;
  text-color:       #f999fc;
  font: "JetBrainsMono Bold 10";
}


window {
  padding: 1em;
  border-color: #DFD0B8;
  border:       3px;
  background-color: #222831;

}

mainbox {
  spacing: 0px;
  children: [message,inputbar,listview];
}

message {
    enabled:                     true;
    margin:                      0px 100px;
    padding:                     15px;
    border:                      0px solid;
    border-color:                inherit;
    background-color:            inherit;
    text-color:                  inherit;
    size:                        400em;
}
textbox {
    background-color:            inherit;
    text-color:                  inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
    placeholder-color:           inherit;
    blink:                       true;
    markup:                      true;
    size:                        400em;
    font: "JetBrainsMono Bold 15";

}
error-message {
    padding:                     12px;
    border:                      0px solid;
    border-color:                inherit;
    background-color:            inherit;
    text-color:                  inherit;
}

element {
  background: transparent;
  children: [ element-icon, element-text ];
}
element,element-text,element-icon, button {
    cursor: pointer;
}

inputbar {
  margin: 0px 20px;
  spacing: 0.4em;
  border-color: #222831;
  border:        5px;
  background-color: #222831;
  children: [entry,overlay,case-indicator];
}


listview, message {
  padding: 0.5em;
  border-color: #222831;
  border:        5px;
  background-color: #222831;

  columns: 1;
  lines:   8;
}
listview {
  border:       0px 5px 5px 5px;
  background-color: #222831;
  border-color:     #222831;
  scrollbar:    true;
}


element {
    padding: 10px;
    border-color: #000000;
}
element-text {
    background-color: transparent;
    text-color:       #DFD0B8;
    font: "JetBrains Mono Medium";
}

element normal.normal {
    background-color: transparent;
    text-color:       #DFD0B8;
}
element.normal.urgent {
    background-color: #282738;
    text-color:       #E5B9C6;
}
element.normal.active {
    background-color: #ffffff;
    text-color:       #E5B9C6;
}
element.selected.normal {
    background-color: #DFD0B8;
    border-color: #282738;
    text-color:       #DFD0B8;
    border: 0px;
}
element.selected.urgent {
    background-color: #E5B9C6;
    border-color: #E5B9C6;
    text-color:       #E5B9C6;
}
element.selected.active {
    background-color: #ffffff;
    border-color: #E5B9C6;
    text-color:       #E5B9C6;
}
element.alternate.normal {
    background-color: transparent;
    text-color:       #DFD0B8;
}
element.alternate.urgent {
    background-color: #282738;
    text-color:       #E5B9C6;
}
element.alternate.active {
    background-color: #282738;
    text-color:       #E5B9C6;
}


element-text.selected.normal {
    background-color: #DFD0B8;
    border-color: #DFD0B8;
    text-color:       #222831;
    font: "JetBrains Mono Medium";
}
element-text.selected.urgent {
    background-color: #E5B9C6;
    border-color: #E5B9C6;
    text-color:       #282738;
    font: "JetBrains Mono Medium";
}
element-text.selected.active {
    background-color: #E5B9C6;
    border-color: #E5B9C6;
    text-color:       #222831;
    font: "JetBrains Mono Medium";
}
scrollbar {
    width:        4px ;
    border:       0;
    handle-color: #DFD0B8;
    handle-width: 8px ;
    padding:      0;
}
mode-switcher {
    border:  0px;
    spacing: 0px;
    expand: true;
}
button {
    text-color: #E5B9C6;
    border:       0px 0px 5px ;
    border-color: #282738;
    background-color: #282738;
    horizontal-align: 0.5;
}
button selected.normal {
    text-color: #DFD0B8;
    margin: 0px;
    padding: 0px;
    border:     5px 5px 5px 5px ;
    border-color: #222831;
    background-color: #353446;
}

entry {
    placeholder: "Search here";
    placeholder-color: #DFD0B8;
    border-color: #222831;
    background-color: #222831;
    border:        10px;
    text-color: #DFD0B8;
  }
